<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight = "1"
        android:paddingBottom="40dp"

        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/mainLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            tools:context=".MainActivity"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_marginTop="124dp"
                >


                <ImageView
                    android:id="@+id/sugarCupId"
                    android:layout_width="109dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:contentDescription="Sugary Drinks Button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    app:srcCompat="@drawable/drink" />

                <ImageView
                    android:id="@+id/waterCupId"
                    android:layout_width="106dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:contentDescription="Water Button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/waterglass" />
        </LinearLayout>

        <TextView
            android:id="@+id/DialogString"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Keep it up!"
            android:layout_below = "@id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop = "25dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="18dp"
                android:progressDrawable="@drawable/progress_bar"
                android:layout_below = "@id/DialogString"
                android:layout_centerHorizontal="true"
                android:layout_marginTop = "8dp"
                />



        <Switch
            android:id="@+id/switch1"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:checked="false"
            android:splitTrack="false"
            android:switchMinWidth="100dp"
            android:switchPadding="10dp"
            android:switchTextAppearance="@style/TextAppearance.AppCompat"
            android:text="Activity mode"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.WindowTitle"
            android:textSize="12sp"
            android:typeface="normal"
            tools:checked="false"
            android:layout_marginTop = "16dp"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/progressBar"/>


        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_below="@id/scroll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/include"
            layout="@layout/bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintTop_toBottomOf ="parent"
            android:layout_marginTop="15dp" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>