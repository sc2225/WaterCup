<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_marginEnd="131dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="364dp"
        android:checked="false"
        android:splitTrack="false"
        android:switchMinWidth="100dp"
        android:switchPadding="10dp"

        android:switchTextAppearance="@style/TextAppearance.AppCompat"
        android:text="Activity mode"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.WindowTitle"
        android:textSize="12sp"
        android:typeface="normal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:checked="false" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/toolbar_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/toolbarContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum= "3">
            <!--tools:layout_editor_absoluteX="131dp"-->
            <!--tools:layout_editor_absoluteY="480dp"> -->

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/clock" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/stats" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                app:srcCompat="@drawable/profile" />
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/waterCupId"
        android:layout_width="93dp"
        android:layout_height="164dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="124dp"
        android:contentDescription="Water Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/waterglass" />

    <ImageView
        android:id="@+id/sugarCupId"
        android:layout_width="109dp"
        android:layout_height="111dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="157dp"
        android:contentDescription="Sugary Drinks Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/drink" />



</android.support.constraint.ConstraintLayout>